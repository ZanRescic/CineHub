@model IEnumerable<CineHub.Models.Vstopnica>

@{
    ViewData["Title"] = "Index";
}

<h1>Moje Vstopnice</h1>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.stVstopnic)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.kupljena)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.terminFilmaId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.stVstopnic)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.kupljena)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.terminFilmaId)
            </td>
            <td>
                @if (item.kupljena == false) {
                    <a asp-action="Delete" asp-route-id="@item.id">Prekliƒçi rezervacijo</a>
                }
            </td>
        </tr>
}
    </tbody>
</table>

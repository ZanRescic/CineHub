@model CineHub.Models.Vstopnica

@{
    ViewData["Title"] = "Edit";
}
<style>
    a{
        text-decoration: none;
    }
</style>
<h1>Nakup vstopnice</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id" />
            <div class="form-group">
                <label asp-for="stVstopnic" class="control-label"></label>
                <input asp-for="stVstopnic" class="form-control"/>
                <span asp-validation-for="stVstopnic" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <input class="form-check-input" asp-for="kupljena" value="false" type ="hidden"/>
            </div>
            <div class="form-group">
                <input asp-for="terminFilmaId" class="form-control" type ="hidden"/>
                <span asp-validation-for="terminFilmaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Nakup" class="btn btn-primary" /> |
                <a asp-action="Index">Nazaj k vstopnicam</a>
            </div>
        </form>
    </div>
</div>

